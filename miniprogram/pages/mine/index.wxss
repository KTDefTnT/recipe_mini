/* 头部 */
.header {
  padding: 30px 0px;
  width: 100%;
  height: 120px;
  text-align: center;
  background-color: #ffc44f;
}
.header__img {
  margin-bottom: 10px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.header__nickName {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  letter-spacing: .1em;
}
/* 内容区域 */
.content-container {
  position: relative;
  background-color: #fff;
}
/* 中间部分 */
.collect {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  top: -20%;
  left: 0px;
  margin: 0px 10px;
  width: calc(100% - 20px);
  height: 80px;
  border-radius: 6px;
  background-color: #fff;
  box-shadow: 0px 0px 2px 0px #ffc44f;
}
.collect-item {
  flex: 1;
  text-align: center;
  border-right: 1px dashed #CDD5E3;
}
.collect-item__icon {
  font-size: 22px;
  color: #ffc44f;
}
.collect-item__text {
  font-size: 16px;
}
.collect-item:last-child {
  border-right: none;
}
/* list部分 */
.mine-list {
  padding: 60px 10px 0px;
}
.list-item {
  padding: 0px 2px;
  height: 42px;
  line-height: 42px;
  border-bottom: 1px solid #CDD5E3;
}
.list-item__icon {
  padding-right: 8px;
  font-size: 24px;
  color: #ffc44f;
}
.list-item__text {
  font-size: 16px;
  color: #222;
}
.icon-right {
  float: right;
}
