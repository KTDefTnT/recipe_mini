/* 头部 */
.header {
  padding: 60rpx 0rpx;
  width: 100%;
  height: 300rpx;
  text-align: center;
  background-color: #ffc44f;
}
.header__img {
  margin-bottom: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.header__nickName {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: .1em;
}
/* 内容区域 */
.content-container {
  position: relative;
  background-color: #fff;
}
/* 中间部分 */
.collect {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  top: -20%;
  left: 0rpx;
  margin: 0rpx 20rpx;
  width: calc(100% - 40rpx);
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 4rpx 0rpx #ffc44f;
}
.collect-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx dashed #CDD5E3;
}
.collect-item__icon {
  font-size: 44rpx;
  color: #fa6571;
}
.collect-item__text {
  font-size: 32rpx;
}

.collect-item:last-child {
  border-right: none;
}
/* list部分 */
.mine-list {
  padding: 120rpx 20rpx 0rpx;
}
.list-item {
  padding: 0rpx 4rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-bottom: 1rpx solid #CDD5E3;
}
.list-item__icon {
  padding-right: 16rpx;
  font-size: 48rpx;
  line-height: 48rpx;
  color: #ffc44f;
  vertical-align: middle;
}
.list-item__text {
  display: inline-block;
  font-size: 32rpx;
  font-weight: normal;
  color: #222;
}
.icon-right {
  float: right;
}
