<view class="home-container">
  <view class="classify-search">
    <searchBar placeholder="请输入菜谱" bindconfirm="handleSearchRecipe" bindcancel="handleClearSearch"></searchBar>
  </view>
  <view wx:if="classifyList.length > 0" class="classify-list">
    <view class="classify-item" wx:for="{{ classifyList }}" wx:key="index" wx:item="item" data-classid="{{ item.classid }}" bindtap="handleViewClassify">
      <image class="classify-item__img" src="{{ item.pic }}"></image>
      <view class="classify-item__content">
        <view class="classify-item__name">{{ item.name }}</view>
        <view class="classify-item__time">烹饪时长： {{ item.cookingtime }}</view>
        <view class="classify-item__people">用餐人数：{{ item.peoplenum }}</view>
      </view>
    </view>
  </view>
</view>